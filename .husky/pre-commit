#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Ensure local project binaries are available (fixes Windows/Git Bash PATH issues)
export PATH="$(pwd)/node_modules/.bin:$PATH"

# Run lint-staged
npx lint-staged

# Run secret scanning
echo "ğŸ”’ Scanning for secrets..."
npx gitleaks protect --verbose --redact --staged || {
  echo "âŒ Secret detected! Commit aborted."
  exit 1
}

echo "âœ… Pre-commit checks passed!"

